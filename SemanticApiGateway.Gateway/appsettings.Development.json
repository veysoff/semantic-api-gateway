{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Auth": {
    "Authority": "https://localhost:5001",
    "Audience": "api://semantic-gateway",
    "Issuer": "https://localhost:5001",
    "SecretKey": "super-secret-key-change-in-production-minimum-32-characters"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5000",
      "https://localhost:5000",
      "https://localhost:5001"
    ]
  },
  "OpenAI": {
    "ApiKey": "${OPENAI_API_KEY}",
    "Model": "gpt-4"
  },
  "ServiceDiscovery": {
    "OrderServiceUrl": "http://localhost:5100",
    "InventoryServiceUrl": "http://localhost:5200",
    "UserServiceUrl": "http://localhost:5300"
  },
  "PluginRefresh": {
    "IntervalSeconds": 30,
    "Enabled": true
  },
  "RateLimit": {
    "RequestsPerHour": 1000,
    "Enabled": true
  },
  "Resilience": {
    "DefaultTimeoutSeconds": 30,
    "DefaultMaxRetries": 3,
    "DefaultBackoffMs": 100,
    "ServiceTimeouts": {
      "OrderService": 15,
      "InventoryService": 10,
      "UserService": 5
    },
    "ServiceRetries": {
      "OrderService": {
        "MaxRetries": 5,
        "BackoffMs": 200
      },
      "InventoryService": {
        "MaxRetries": 3,
        "BackoffMs": 100
      },
      "UserService": {
        "MaxRetries": 3,
        "BackoffMs": 100
      }
    }
  }
}
