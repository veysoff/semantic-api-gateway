{
  "Urls": "http://localhost:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Auth": {
    "Authority": "https://localhost:5001",
    "Audience": "api://semantic-gateway",
    "Issuer": "https://localhost:5001",
    "SecretKey": "change-this-in-production-use-real-secrets-minimum-32-chars"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com"
    ]
  },
  "OpenAI": {
    "ApiKey": "sk-test",
    "Model": "gpt-4"
  },
  "SemanticKernel": {
    "Functions": {
      "TimeoutMs": 30000,
      "MaxRetries": 3
    }
  },
  "Resilience": {
    "DefaultTimeoutSeconds": 30,
    "DefaultMaxRetries": 3,
    "DefaultBackoffMs": 100,
    "ServiceTimeouts": {
      "OrderService": 15,
      "InventoryService": 10,
      "UserService": 5
    },
    "ServiceRetries": {
      "OrderService": {
        "MaxRetries": 5,
        "BackoffMs": 200
      },
      "InventoryService": {
        "MaxRetries": 3,
        "BackoffMs": 100
      },
      "UserService": {
        "MaxRetries": 3,
        "BackoffMs": 100
      }
    }
  },
  "ServiceDiscovery": {
    "OrderServiceUrl": "http://localhost:5100",
    "InventoryServiceUrl": "http://localhost:5200",
    "UserServiceUrl": "http://localhost:5300"
  },
  "PluginRefresh": {
    "IntervalSeconds": 60,
    "Enabled": true
  },
  "RateLimit": {
    "RequestsPerHour": 100,
    "Enabled": true
  }
}
